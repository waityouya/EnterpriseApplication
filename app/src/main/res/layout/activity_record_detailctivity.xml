<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activitys.RecordDetailctivity">

    <include
        android:id="@+id/head"
        layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/v_start"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/gray" />
            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_below="@+id/v_start"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/iv_tag_name"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/xingming"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/iv_tag_name"
                    android:text="@string/name1" />

                <TextView
                    android:id="@+id/tv_driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp" />



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl_name"
                android:background="@color/gray" />
            <RelativeLayout
                android:id="@+id/rl_driver_number"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/rl_name">

                <ImageView
                    android:id="@+id/iv_tag_driver_number"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/zhengjianhaoma"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/iv_tag_driver_number"
                    android:text="@string/id_number1" />

                <TextView
                    android:id="@+id/tv_driver_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp" />



            </RelativeLayout>
            <View
                android:id="@+id/v_tag_2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/rl_driver_number"
                android:background="@color/gray" />
            <RelativeLayout
                android:id="@+id/rl_car_number"
                android:layout_below="@+id/v_tag_2"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/iv_tag_car_number"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/chepai"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/iv_tag_car_number"
                    android:text="@string/car_number1" />

                <TextView
                    android:id="@+id/tv_car_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginEnd="10dp" />



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl_car_number"
                android:background="@color/gray" />
            <RelativeLayout
                android:id="@+id/rl_car_vin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/rl_car_number">

                <ImageView
                    android:id="@+id/iv_tag_car_vin"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/chejiahao"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/iv_tag_car_vin"
                    android:text="@string/car_vin" />

                <TextView
                    android:id="@+id/tv_car_vin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginEnd="10dp" />



            </RelativeLayout>
            <View
                android:id="@+id/v_tag"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/rl_car_vin"
                android:background="@color/gray" />
            <ListView
                android:layout_below="@+id/v_tag"
                android:id="@+id/lvTrace"
                android:layout_width="match_parent"
                android:divider="@null"
                android:clickable="false"
                android:listSelector="@android:color/transparent"
                android:dividerHeight="0dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>